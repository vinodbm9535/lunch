            android:name=".AddTeacherActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CalenderMenuActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrawerMainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Dashboard" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".Transaction" />
        <activity android:name=".ChangePassword" />
        <activity
            android:name=".AddChildActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ManageTeacherActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>